<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.b2infosoft.giftcardup.fragments.MyListing">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_background"
        >
        <EditText
            android:id="@+id/search"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/type"
            android:hint="Keyword..."
            android:padding="5dp"
            android:layout_margin="5dp"
            android:background="@drawable/search_box_layout_1"
            android:layout_centerVertical="true"
            />
        <Spinner
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_toLeftOf="@+id/action_search"
            android:background="@drawable/search_box_layout_1"
            android:entries="@array/search_type"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:layout_margin="5dp"
            />
        <ImageButton
            android:id="@+id/action_search"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/ic_search_24dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="1dp"
            android:background="@drawable/search_box_layout_1"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        >
    </android.support.v7.widget.RecyclerView>
</LinearLayout>