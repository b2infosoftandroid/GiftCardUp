<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.b2infosoft.giftcardup.fragments.ReferralRewards"
    android:padding="16dp"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_gravity="center"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/refer_url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="5"
                    android:singleLine="false"
                    android:hint="Referral URL?"
                    android:background="@drawable/layout_border"
                    android:lines="3"
                    android:padding="5dp"
                    android:editable="false"
                    android:enabled="false"
                    android:textColor="@color/edit_text_text"
                    />
            </android.support.design.widget.TextInputLayout>
            <Button
                android:id="@+id/action_refer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="REFER A FRIEND"
                android:background="@drawable/button_fill_background"
                android:textColor="@color/button_foreground"
                android:layout_margin="30dp"
                />
        </LinearLayout>
    </ScrollView>
</FrameLayout>
