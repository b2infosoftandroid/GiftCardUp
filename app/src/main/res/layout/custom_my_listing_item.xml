<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="5dp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/my_listing_card_image"
                        android:layout_width="120dp"
                        android:layout_height="80dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/not_find" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/layout_empty_background"
                            android:clickable="true"
                            android:descendantFocusability="blocksDescendants"
                            android:orientation="horizontal"
                            android:paddingLeft="10dp">

                            <TextView
                                android:id="@+id/company_card_gift_card"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tata(3652)"
                                android:textAllCaps="true"
                                android:textColor="@color/buy_card_company"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/layout_empty_background"
                            android:clickable="true"
                            android:descendantFocusability="blocksDescendants"
                            android:orientation="horizontal"
                            android:paddingLeft="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Value"
                                android:textAllCaps="true"
                                android:textColor="@color/buy_card_text" />

                            <TextView
                                android:id="@+id/company_card_card_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginLeft="10dp"
                                android:text="$200.00"
                                android:textAllCaps="true"
                                android:textColor="@color/buy_card_text"
                                android:textStyle="normal" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/company_card_status"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:text="Processing"
                            android:textAllCaps="true"
                            android:textColor="@color/app_background" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/action_edit"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/button_fill_background"
                        android:text="Edit"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/action_delete"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/button_fill_background"
                        android:text="Delete"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/action_deny"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/button_fill_background"
                        android:text="Denied Result"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/action_need_review"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/button_fill_background"
                        android:text="Need Review"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/action_investigate"
                        android:layout_width="130dp"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/button_fill_background"
                        android:text="Dispute Result"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            card_view:cardCornerRadius="5dp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_empty_background"
                    android:clickable="true"
                    android:descendantFocusability="blocksDescendants"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="E-Card"
                        android:textAllCaps="true"
                        android:textColor="@color/buy_card_text"
                        android:textStyle="normal" />

                    <ImageView
                        android:id="@+id/company_card_e_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_check_24dp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:alpha="0.5"
                    android:background="@color/divider" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_empty_background"
                    android:clickable="true"
                    android:descendantFocusability="blocksDescendants"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="Price"
                        android:textAllCaps="true"
                        android:textColor="@color/buy_card_text"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/company_card_card_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="10dp"
                        android:text="$36.00"
                        android:textAllCaps="true"
                        android:textColor="@color/buy_card_text"
                        android:textStyle="normal" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:alpha="0.5"
                    android:background="@color/divider" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_empty_background"
                    android:clickable="true"
                    android:descendantFocusability="blocksDescendants"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="Sell%"
                        android:textAllCaps="true"
                        android:textColor="@color/buy_card_text"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/company_card_card_sell"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="10dp"
                        android:text="82.00%"
                        android:textAllCaps="true"
                        android:textColor="@color/buy_card_text"
                        android:textStyle="normal" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:alpha="0.5"
                    android:background="@color/divider" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_empty_background"
                    android:clickable="true"
                    android:descendantFocusability="blocksDescendants"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="Listed On"
                        android:textAllCaps="true"
                        android:textColor="@color/buy_card_text"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/company_card_listed_on"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="10dp"
                        android:text=""
                        android:textAllCaps="true"
                        android:textColor="@color/buy_card_text"
                        android:textStyle="normal" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:alpha="0.5"
                    android:background="@color/divider" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_empty_background"
                    android:clickable="true"
                    android:descendantFocusability="blocksDescendants"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="Sold On"
                        android:textAllCaps="true"
                        android:textColor="@color/buy_card_text"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/company_card_sold_on"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="10dp"
                        android:text=""
                        android:textAllCaps="true"
                        android:textColor="@color/buy_card_text"
                        android:textStyle="normal" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:alpha="0.5"
                    android:background="@color/divider" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_empty_background"
                    android:clickable="true"
                    android:descendantFocusability="blocksDescendants"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="Quick Sell"
                        android:textAllCaps="true"
                        android:textColor="@color/buy_card_text"
                        android:textStyle="normal" />

                    <ImageView
                        android:id="@+id/company_card_quick_sell"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_check_24dp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:alpha="0.5"
                    android:background="@color/divider" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_empty_background"
                    android:clickable="true"
                    android:descendantFocusability="blocksDescendants"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="Fund"
                        android:textAllCaps="true"
                        android:textColor="@color/buy_card_text"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/company_card_fund"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="10dp"
                        android:text="$485.25"
                        android:textAllCaps="true"
                        android:textColor="@color/buy_card_text"
                        android:textStyle="normal" />
                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>